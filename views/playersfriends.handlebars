<table border="1">
    <thead>
        <tr>
            <th>player_id</th>
            <th>friend_id</th>
            <th>status</th>
            <th>Delete a Player's Friend</th>
        </tr>
    </thead>
    <tbody>
        {{#each playersfriends}}
        <tr>
            <td>{{this.player_id}}</td>
            <td>{{this.friend_id}}</td>
            <td>{{this.status}}</td>
            <td><form method="POST" action="/delete-playersfriends">
                <button type="submit">delete</button>
                </form></td>
        </tr>
        {{/each}}
    </tbody>
</table>


<h3>Edit a playersfriends</h3>
<form method="POST" action="/edit-playersfriends">
    <label for="player_id">Player ID:</label>
    <select id="player_id" name="player_id">
        {{#each playersfriends}}
            <option value="{{this.player_id}}">{{this.player_id}}</option>
        {{/each}}
    </select>
    <label for="friend_id">Friend ID:</label>
    <select id="friend_id" name="friend_id">
        {{#each playersfriends}}
            <option value="{{this.friend_id}}">{{this.friend_id}}</option>
        {{/each}}
    </select>
    <label for="status">Status:</label>
    <select id="status" name="status">
        {{#each playersfriends}}
            <option value="{{this.status}}">{{this.status}}</option>
        {{/each}}
    </select>
    <label for="status">Status:</label>
    <select id="status" name="status">
        {{#each playersfriends}}
            <option value="{{this.status}}">{{this.status}}</option>
        {{/each}}
    </select>
    <button type="submit">Edit PlayersFriends</button>
</form>