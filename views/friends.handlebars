<table border="1">
    <thead>
        <tr>
            <th>friend_id</th>
        </tr>
    </thead>
    <tbody>
        {{#each friends}}
        <tr>
            <td>{{this.friend_id}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>


<h3>Add a New Friend</h3>
<form method="POST" action="/add-friend">
    <label for="friend_id">Friend ID:</label>
    <input type="text" id="friend_id" name="friend_id"><br>

    <button type="submit">Add Friend</button>
</form>


<h3>Delete a friend</h3>
<form method="POST" action="/delete-friend">
    <label for="friend_id">Friend ID:</label>
    <input type="text" id="friend_id" name="friend_id"><br>

    <button type="submit">Delete Player</button>
</form>

<h3>View Friends</h3>
<form method="POST" action="/view-friends">
    <button type="submit">View friends</button>
</form>