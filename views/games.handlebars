<h1>Games</h1>
<p><a href="/">Home </a><a href="/players">Players</a> <a href="/friends">Friends</a>
<a href="/playersfriends">PlayersFriends</a> <a href="/games">Games</a> <a href="/gamesplayed">GamesPlayed</a></p>
<table border="1">
    <thead>
        <tr>
            <th>game_id</th>
            <th>title</th>
            <th>genre</th>
            <th>game_platform</th>
            <th>release_date</th>
            <th>Delete a Game</th>
        </tr>
    </thead>
    <tbody>
        {{#each games}}
        <tr>
            <td>{{this.game_id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.genre}}</td>
            <td>{{this.game_platform}}</td>
            <td>{{this.format_release_date}}</td>
            <td><form method="POST" action="/delete-game">
                <button type="submit">delete</button>
                </form></td>
        </tr>
        {{/each}}
    </tbody>
</table>

<h3>Add a game</h3>
<form method="POST" action="/add-game">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title"><br>
    <label for="genre">Genre:</label>
    <input type="text" id="genre" name="genre"><br>
    <label for="game_platform">Game Platform (separated by commas if multiple):</label>
    <input type="text" id="game_platform" name="game_platform"><br>
    <label for="release_date">Release Date:</label>
    <input type="date" id="release_date" name="release_date"><br>
    <button type="submit">Add Game</button>
</form>

<h3>Edit a game</h3>
<form method="POST" action="/edit-game">
    <label for="game_id">Game ID:</label>
    <select id="game_id" name="game_id">
        {{#each games}}
            <option value="{{this.game_id}}">{{this.game_id}}</option>
        {{/each}}
    </select><br>
    <label for="title">Title:</label>
    <input type="text" id="title" name="title"><br>
    <label for="genre">Genre:</label>
    <input type="text" id="genre" name="genre"><br>
    <label for="game_platform">Game Platform (separated by commas if multiple):</label>
    <input type="text" id="game_platform" name="game_platform"><br>
    <label for="release_date">Release Date:</label>
    <input type="date" id="release_date" name="release_date"><br>
    <button type="submit">Edit Game</button>
</form>
